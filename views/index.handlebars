<div class="container bg">
	<!-- row -->
	<div class="row">
	    <div class="center col-sm-12">
		<img src="http://www.freepngimg.com/download/burger/1-2-burger-transparent.png" alt="..." style= "width: 25%" class="img-circle">
	        <h1>Eat-Da-Burger ! </h1>
	    </div>
  	</div>

	<!-- row -->
	<div class="row">
	    <div class="col-sm-6">

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	
  	<!-- row -->
	<div class="row">
	    <div class="center col-sm-12">

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter a burger you want to eat. Click the "Submit" button.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit </button>
			</form>

	    </div>
	
  	</div>

</div>